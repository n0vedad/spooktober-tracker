# === Shared configuration (development & production) ===
# Complete Postgres connection string
DATABASE_URL=postgresql://username:password@your-db-host:5432/spooktober_tracker

# Express listen port (must match deployment configuration)
PORT=3000

# DID with administrative privileges for backend routes
ADMIN_DID=did:plc:exampleadmin

# Comma-separated Bluesky Jetstream hosts (wss:// is added automatically)
JETSTREAM_HOSTS=jetstream1.us-east.bsky.network,jetstream2.us-east.bsky.network,jetstream1.us-west.bsky.network,jetstream2.us-west.bsky.network

# === Development-only settings ===
# Comma-separated origins for dev (use "*" to allow all)
DEV_CORS_ORIGINS=http://127.0.0.1:13214,http://localhost:13214

# === Production-only settings ===
# Comma-separated origins for production (use "*" or "__ALL__" to allow all)
CORS_ALLOWED_ORIGINS=https://spooktober.example.com
